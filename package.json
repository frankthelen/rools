    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-should-promised": "^2.0.0",
    "mocha": "^5.0.0",
    "nyc": "^11.4.1",
    "sinon": "^4.2.2",
    "sinon-chai": "^2.14.0"
  },
  "dependencies": {
    "bluebird": "^3.5.1",
